<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/student_id_tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"/>
    <TextView
        android:id="@+id/student_name_tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"/>
    <TextView
        android:id="@+id/student_email_tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"/>
    <TextView
        android:id="@+id/student_created_at_tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created At"/>

</LinearLayout>